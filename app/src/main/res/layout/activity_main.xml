<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/register_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.587"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email_text"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/login_password_text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/login_password_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="364dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/login_email_text"
            android:text="email" android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="@+id/login_email_text"/>
    <TextView
            android:text="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/login_password_text" app:layout_constraintStart_toStartOf="@+id/login_password_text"
            android:layout_marginStart="0dp"/>
    <Button
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button"/>
    <Button
            android:text="bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bind_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="@+id/login_button"/>
    <Button
            android:text="unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/bind_button"
            android:id="@+id/unbind_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bind_button"/>
    <Button
            android:text="service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/unbind_button"
            app:layout_constraintStart_toStartOf="@+id/unbind_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>